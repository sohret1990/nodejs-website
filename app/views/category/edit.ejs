
<div class="card card-bordered style-primary">
    <div class="card-head">
        <div class="tools">
            <div class="btn-group">
                <a onclick="ReloadTable();" class="btn btn-icon-toggle btn-refresh"><i class="md md-refresh"></i></a>
                <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
                <!-- <a class="btn btn-icon-toggle btn-close"><i class="md md-close"></i></a> -->
            </div>
        </div>
        <header><i class="fa fa-fw fa-tag"></i> <%- title -%></header>
    </div>
    <!--end .card-head -->
    <div class="card-body style-default-bright">
      

        <form action="/category/edit" method="POST" id="frmCategory" class="from-horizontal">
            <input type="hidden" name="id" value="<%-cat.id-%>">
            <input type="hidden" name="_id" value="<%-cat._id-%>">
            <div class="form-group">
                <label for="name" class="col-md-3 label-control">Kateqoriya adi</label>
                <div class="col-md-9">
                    <input type="text" name="name" id="name" value="<%-cat.name-%>" class="form-control" />
                </div>
            </div>
            <input type="submit" value="Yadda saxla" class="btn btn-success">
        </form>
        


    </div>
    <!--end .card-body -->
</div>
